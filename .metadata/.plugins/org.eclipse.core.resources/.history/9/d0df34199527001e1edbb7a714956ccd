package javaprogramms1;

//# Example: Searching for a specific number in a list and stopping the loop when found


public class SearchNumberInList {
    public static void main(String[] args) {
        int[] numbers = {5, 8, 12, 4, 7, 6};
        int searchNum = 7;
        boolean found = false;

        for (int num : numbers) {
            if (num == searchNum) {
                found = true;
                break; // Stops the loop when the desired number is found
            }
        }

        if (found) {
            System.out.println("The number " + searchNum + " is in the list.");
        } else {
            System.out.println("The number " + searchNum + " is not in the list.");
        }
    }
}
